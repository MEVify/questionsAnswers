{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "lib": ["es6"],
    "allowJs": true,
    "outDir": "./dist",
    "rootDir": "./server",
    "strict": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "paths": {
    },
  },
  "include": [
    "./**/*"
  ],
  "exclude": [
    "node_modules",
    "./dist/**/*",
    "*config.js",
    "coverage",
  ]
}